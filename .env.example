
# =====================
# GLOBAL ENVIRONMENT
# =====================
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# =====================
# POSTGRESQL (shared infra)
# =====================
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=legaltech
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =====================
# REDIS (shared infra)
# =====================
REDIS_HOST=redis
REDIS_PORT=6379

# =====================
# AUTH SERVICE
# =====================
AUTH_SERVICE_PORT=3001
AUTH_JWT_SECRET=your_auth_jwt_secret
AUTH_JWT_EXPIRES_IN=1d

# =====================
# CONTRACTS SERVICE
# =====================
CONTRACTS_SERVICE_PORT=3002
CONTRACTS_GEMINI_API_KEY=your_gemini_api_key

# =====================
# TEMPLATES SERVICE
# =====================
TEMPLATES_SERVICE_PORT=3003

# =====================
# API GATEWAY
# =====================
API_GATEWAY_PORT=4000

# =====================
# FRONTEND (Next.js)
# =====================
NEXT_PUBLIC_API_URL=/api 
NEXTAUTH_URL=http://localhost:3000

# =====================
# METRICS & MONITORING
# =====================
METRICS_ENABLED=true
PROMETHEUS_SCRAPE_PATH=/metrics

# =====================
# OTHER
# =====================
# Add any other global or service-specific variables below