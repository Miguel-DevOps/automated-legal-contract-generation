{
  "id": null,
  "title": "NestJS Microservices Metrics",
  "tags": ["nestjs", "microservices", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests per Second",
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (instance)",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Request Duration (ms)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le, instance)) * 1000",
          "legendFormat": "p95 {{instance}}",
          "refId": "B"
        }
      ],
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    }
  ]
}
